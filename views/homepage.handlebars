<body>
     <div class="post-container">
{{#each posts}}
    <div class="post">
        <div class="post-header">
            <h2>{{this.title}}</h2>
            <div class="post-author">
            <p>Posted by: {{this.user.name}}</p>
            </div>
</div>
        <p>{{this.content}}</p>
        <p>Posted on: {{this.date_created}}</p>
        {{#each this.comments}}
            <div class="comment">
                <p>{{this.content}}</p>
                <p>Comment by: {{this.user.name}}</p>
                <p>Commented on: {{this.date_created}}</p>
            </div>
        {{/each}}
    </div>
{{/each}}
</div>

<div id="disclaimer">
<h5>Please log in or sign up to see more posts</h5>
</div>
</body>
