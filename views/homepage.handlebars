<body>
    <div class="post-container">
        {{#each posts}}
            <div class="post">
                <div class="post-header">
                    <h2>{{this.title}}</h2>
                    <div class="post-author">
                        <p>Posted by: {{this.user.name}}</p>
                    </div>
                </div>

                <div class="post-heading-line"></div>
                <p>{{this.content}}</p>
                <p>Posted on: {{formatDate this.date_created}}</p>
                <h3 class="comment-header" >Comments</h3>

                {{#each this.comments}}
                    <div class="comment">
                        <h4>{{this.user.name}}</h4>
                        <p>{{this.content}}</p>
                        <p>{{formatDate this.date_created}}</p>
                    </div>
                {{/each}}
            </div>
        {{/each}}
    </div>

    <div id="disclaimer">
        <h5>Please log in or sign up to see more posts</h5>
    </div>
</body>